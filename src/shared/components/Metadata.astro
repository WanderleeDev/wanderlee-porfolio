---
import { AstroSeo } from "@astrolib/seo";

const description =
  "Welcome to my portfolio! I am a front-end programmer, currently learning React and Backend technologies to complement my knowledge.";
const banner =
  "https://www.dropbox.com/scl/fi/s09hf619wq3kfqsqpuwoc/porfolio-banner.webp?rlkey=mu41kk8zxkxarec5je9szsoik&st=utx52cbr&raw=1";
const url = "https://wanderlee-porfolio-virid.vercel.app/";
---

<AstroSeo
  description={description}
  canonical={url}
  noindex={false}
  nofollow={false}
  openGraph={{
    url: url,
    title: "Porfolio Wanderlee",
    description: description,
    images: [
      {
        url: banner,
        width: 800,
        height: 400,
        alt: "Porfolio WanderleeDev",
        type: "image/webp",
      },
    ],
    site_name: "Porfolio Wanderlee",
  }}
  twitter={{
    handle: "@handle",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
